$color-light = #f8f8f8
$color-dark = #2c3e50
$color-moon = #eab700

$color-background = $color-light
$color-text = $color-dark
$color-text-hover = $color-moon

html
  font-family $font-text
  font-size 18px
  
body
  line-height 1.5
  background-color $color-background
  text-rendering optimizeLegibility
  color $color-text
  margin 0
  & > *
    width 50%
    margin 0 auto
    clearfix()
  & > header
    margin-top 6em
    margin-bottom 4em
    p
      margin 0
  & > footer
    margin 4em auto
    text-align center
    font-size 0.7em
    font-style italic

h1
  font-family $font-header
  font-weight normal
  margin 0
  font-size 3em
  line-height 1em
  
h2
  font-weight normal
  
h3
  margin-top 1.5em

a
  color $color-text



$size = 2em

.moon
  float left
  position relative
  width $size
  height $size
  margin (5/4)em 2em (5/4)em 0
  border-radius 50%
  border 1px solid #2c3e50
  &::after
    content ""
    position absolute
    left ($size/2)
    width ($size/2)
    height ($size/2)
    border-radius 50%
    border 1px solid #2c3e50
    background-color $color-background
    transition 0.3s all
  &:hover::after
    width $size
    height $size
    left -1px
    top -1px